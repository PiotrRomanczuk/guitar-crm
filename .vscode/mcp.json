{
  "servers": {
    "postman-api-http-server": {
      "type": "http",
      "url": "https://mcp.postman.com/mcp",
      "headers": {
        "Authorization": "Bearer ${input:postman-api-key}"
      }
    },
    "Sentry": {
      "url": "https://mcp.sentry.dev/mcp",
      "type": "http"
    }
  },
  "inputs": [
    {
      "id": "postman-api-key",
      "type": "promptString",
      "description": "Enter your Postman API key"
    }
  ]
}
