    "e2e:db": "start-server-and-test './scripts/dev-server.sh start all' http://127.0.0.1:3000 'npm run seed:test-user && cypress run'",
    "lighthouse:simple": "lighthouse http://127.0.0.1:3000 --output=html --output-path=lighthouse-simple.html --chrome-flags='--headless --no-sandbox' --view"
