    "e2e:admin": "start-server-and-test 'npm run dev:3000' http://127.0.0.1:3000 'cypress run --spec \"cypress/e2e/admin-*.cy.ts,cypress/e2e/lessons/admin-*.cy.ts\"'",
    "e2e:sign-in": "start-server-and-test 'npm run dev:3000' http://127.0.0.1:3000 'cypress run --spec cypress/e2e/admin/admin-sign-in.cy.ts'",
